<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>de.nilsa.intellijsarif</id>
    <name>SARIF Viewer</name>
    <vendor>nils-a</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow anchor="right" id="de.nilsa.intellijsarif.sarifToolWindow" icon="SarifIcons.SarifAction"
                    factoryClass="de.nilsa.intellijsarif.toolWindow.SarifToolWindowFactory"/>
    </extensions>

    <applicationListeners>
    </applicationListeners>

    <actions>
        <action id="de.nilsa.intellijsarif.actions.OpenSarifReportAction"
                class="de.nilsa.intellijsarif.actions.OpenSarifReportAction"
                icon="SarifIcons.SarifAction"
                text="Open SARIF Report">
            <add-to-group group-id="ToolsMenu" />
        </action>

        <group id="SarifReportWindowToolbar">
            <action id="de.nilsa.intellijsarif.toolWindow.SarifErrorsTreePanel.ExpandAll"
                    class="de.nilsa.intellijsarif.toolWindow.SarifErrorsTreePanelAction$ExpandAll"
                    icon="AllIcons.Actions.Expandall"
                    use-shortcut-of="ExpandAll" />
            <action id="de.nilsa.intellijsarif.toolWindow.SarifErrorsTreePanel.CollapseAll"
                    class="de.nilsa.intellijsarif.toolWindow.SarifErrorsTreePanelAction$CollapseAll"
                    icon="AllIcons.Actions.Collapseall"
                    use-shortcut-of="CollapseAll" />
        </group>
    </actions>
</idea-plugin>
